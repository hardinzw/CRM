@model CRM.Models.Bug
@{
}

<form action="/Bug/EditBug" method="post">
    @Html.HiddenFor(m => m.Id);
    <div class="input-group mb-3" id="bugName">
        <span class="input-group-text">Name</span>
        <input type="text" class="form-control" aria-label="Bug Name" aria-describedby="bug-name" asp-for="Name">
    </div>

    <div class="mb-3">
        <div class="input-group" id="bugSeverity">
            <span class="input-group-text">Severity</span>
            <select class="form-control" asp-for="Type">
                <option>Minor</option>
                <option>Moderate</option>
                <option>Critical</option>
            </select>
        </div>
    </div>

    <div class="input-group" id="bugDescription">
        <span class="input-group-text">Description</span>
        <textarea class="form-control" aria-label="Description" asp-for="Description"></textarea>
    </div>
    <br />
    <div class="form-check">
        @Html.CheckBoxFor(m => m.IsActive) @Html.Label("In Production?")
    </div>
    <br />
    <input class="btn btn-primary" type="submit" value="Update" asp-for="DateCreated">
</form>

